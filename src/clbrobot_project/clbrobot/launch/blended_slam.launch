<launch>
  <include file="$(find clbrobot)/launch/bringup.launch" />
  <include file="$(find clbrobot)/launch/lidar/$(env RIKILIDAR).launch" />
  <include file="$(find clbrobot)/param/navigation/slam_gmapping.xml" />
  <include file="$(find clbrobot)/param/navigation/move_base.xml" />
  <include file="$(find astra_launch)/launch/astra.launch" />
  <!-- Rviz -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="rviz_config" default="$(find clbrobot)/rviz/blended_slam.rviz" />
  <arg     if="$(eval rviz_config=='')" name="command_args" value="" />
  <arg unless="$(eval rviz_config=='')" name="command_args" value="-d $(arg rviz_config)" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
        args="$(arg command_args)" output="screen">
  </node>

</launch>
